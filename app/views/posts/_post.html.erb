<div id="<%= dom_id post %>">
  <div>
    <%# <strong>Title:</strong> %>
    <h3><%= post.title %></h3>
    <h4>posted by: <%= link_to  post.user.name, user_path(post.user) %></h4>
    <h6><%= pluralize(post.views, "view")%></h6>
  </div>

  <div>
    <strong>Body:</strong>
    <%= post.body %>
  </div>

</div>
